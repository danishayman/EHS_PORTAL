@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "CLIP" }, FormMethod.Post, new { id = "logoutForm", @class = "d-flex" }))
    {
    @Html.AntiForgeryToken()

    <ul class="navbar-nav d-flex">
        <li class="nav-item">
            @Html.ActionLink("Hello " + User.Identity.GetUserName() + "!", "Index", "Manage", new { area = "CLIP" }, new { title = "Manage", @class="nav-link" })
        </li>
        <li class="nav-item">
            <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Log Out</a>
        </li>
    </ul>
    }
}
else
{
    <ul class="navbar-nav d-flex">
        <li class="nav-item">
            @Html.ActionLink("Log in", "Login", "Account", new { area = "CLIP" }, new { id = "loginLink", @class="nav-link" })
        </li>
    </ul>
}
