                tooltip += $"Expires on: {record.ExpDate.ToString("dd/MM/yyyy")}<br>";
                tooltip += $"Days remaining: {Math.Ceiling(remaining.TotalDays)}";
            }
        }
        else if (record.ExpStatus == "No Expiry")
