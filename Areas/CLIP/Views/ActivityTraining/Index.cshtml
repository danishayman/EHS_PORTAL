@model IEnumerable<EHS_PORTAL.Areas.CLIP.Models.ActivityTraining>

@{
    ViewBag.Title = "Training Activities";
    Layout = "~/Areas/CLIP/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fa fa-graduation-cap"></i> My Training Activities
                        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm pull-right">
                            <i class="fa fa-plus"></i> Log New Activity
                        </a>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Activity Name</th>
                                    <th>Date</th>
                                    <th>CEP Points</th>
                                    <th>CPD Points</th>
                                    <th>Document</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.Any())
                                {
                                    foreach (var activity in Model)
                                    {
                                        <tr>
                                            <td>@activity.ActivityName</td>
                                            <td>@activity.ActivityDate.ToString("yyyy-MM-dd")</td>
                                            <td>@(activity.CEPPointsGained.HasValue ? activity.CEPPointsGained.Value.ToString() : "-")</td>
                                            <td>@(activity.CPDPointsGained.HasValue ? activity.CPDPointsGained.Value.ToString() : "-")</td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(activity.Document))
                                                {
                                                    <a href="@Url.Action("DownloadDocument", new { id = activity.Id })" class="btn btn-info btn-xs">
                                                        <i class="fa fa-download"></i> Download
                                                    </a>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">No document</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group">
                                                    <a href="@Url.Action("Details", new { id = activity.Id })" class="btn btn-info btn-xs">
                                                        <i class="fa fa-eye"></i> View
                                                    </a>
                                                    <a href="@Url.Action("Edit", new { id = activity.Id })" class="btn btn-warning btn-xs">
                                                        <i class="fa fa-edit"></i> Edit
                                                    </a>
                                                    <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#deleteModal@(activity.Id)">
                                                        <i class="fa fa-trash"></i> Delete
                                                    </button>
                                                </div>
                                                
                                                <!-- Delete Confirmation Modal -->
                                                <div class="modal fade" id="deleteModal@(activity.Id)" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel">
                                                    <div class="modal-dialog modal-sm" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                                <h4 class="modal-title" id="deleteModalLabel">Confirm Delete</h4>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you want to delete this activity?
                                                            </div>
                                                            <div class="modal-footer">
                                                                @using (Html.BeginForm("Delete", "ActivityTraining", new { id = activity.Id }, FormMethod.Post))
                                                                {
                                                                    @Html.AntiForgeryToken()
                                                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                                                    <button type="submit" class="btn btn-danger">Delete</button>
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="6" class="text-center">No training activities found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').DataTable({
                "order": [[1, "desc"]]
            });
        });
    </script>
} 